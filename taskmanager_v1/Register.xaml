<Window x:Class="taskmanager_v1.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" Height="350" Width="400">
    <Grid>
        <TextBlock Text="Register New Account" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>

        <TextBlock Text="Full Name:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,80,0,0"/>
        <TextBox Name="FullNameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="280" Margin="50,110,0,0"/>

        <TextBlock Text="Username:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,150,0,0"/>
        <TextBox Name="UsernameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="280" Margin="50,180,0,0"/>

        <TextBlock Text="Password:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,220,0,0"/>
        <PasswordBox Name="PasswordBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="280" Margin="50,250,0,0"/>

        <Button Content="Register" HorizontalAlignment="Center" VerticalAlignment="Top" Width="100" Margin="0,300,0,0" Click="RegisterButton_Click"/>
        <Button Content="Back to Login" HorizontalAlignment="Center" VerticalAlignment="Top" Width="100" Margin="0,330,0,0" Click="BackToLoginButton_Click"/>
    </Grid>
</Window>
