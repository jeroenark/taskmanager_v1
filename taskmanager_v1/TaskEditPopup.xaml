<Window x:Class="taskmanager_v1.TaskEditPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Task" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <StackPanel Margin="0,10">
                <TextBlock Text="Title" FontWeight="Bold" />
                <TextBox Name="TitleTextBox" />
            </StackPanel>

            <StackPanel Margin="0,10">
                <TextBlock Text="Description" FontWeight="Bold" />
                <TextBox Name="DescriptionTextBox" Height="50" AcceptsReturn="True" TextWrapping="Wrap" />
            </StackPanel>

            <StackPanel Margin="0,10">
                <TextBlock Text="Deadline (yyyy-MM-dd HH:mm)" FontWeight="Bold" />
                <TextBox Name="DeadlineTextBox" />
            </StackPanel>

            <CheckBox Name="CompletedCheckBox" Content="Completed" Margin="0,10" />

            <Button Content="Save" Click="SaveButton_Click" HorizontalAlignment="Right" Margin="0,10" Width="100" />
        </StackPanel>
    </Grid>
</Window>
